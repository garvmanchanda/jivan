{
  "expo": {
    "name": "Jivan",
    "slug": "jivan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A1628"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.jivan.health",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Jivan needs microphone access to record your health questions."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A1628"
      },
      "permissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.jivan.health"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Jivan needs microphone access to record your health questions."
        }
      ]
    ]
  }
}

